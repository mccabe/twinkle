<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <com.prunicki.suzuki.twinkle.NoteView
        android:id="@+id/NoteView"
        android:layout_width="fill_parent"
        android:layout_height="100dip"
        android:layout_gravity="center"
        android:layout_margin="15dip"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginLeft="25dip"
        android:layout_marginRight="25dip">
        <Button
            android:id="@+id/SeeNoteA"
            android:text="A"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"/>
        <Button
            android:id="@+id/SeeNoteB"
            android:text="B"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginLeft="25dip"
        android:layout_marginRight="25dip">
        <Button
            android:id="@+id/SeeNoteC"
            android:text="C"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"/>
        <Button
            android:id="@+id/SeeNoteD"
            android:text="D"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginLeft="25dip"
        android:layout_marginRight="25dip">
        <Button
            android:id="@+id/SeeNoteE"
            android:text="E"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"/>
        <Button
            android:id="@+id/SeeNoteF"
            android:text="F"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"/>
    </LinearLayout>
    <Button
        android:id="@+id/SeeNoteG"
        android:text="G"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"/>
    <ImageButton
        android:id="@+id/SeeNoteNext"
        android:src="@drawable/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:layout_gravity="center"/>

</LinearLayout>
