<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/Pitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:layout_gravity="center"
        android:drawableBottom="@drawable/higher_or_lower"
        android:text="@string/btn_pitch"/>
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <TableRow>
            <Button
                android:id="@+id/SeeNote"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="10dip"
                android:drawableBottom="@drawable/see_note"
                android:text="@string/btn_see_note"/>
            <Button
                android:id="@+id/HearNote"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="10dip"
                android:drawableBottom="@drawable/hear_note"
                android:text="@string/btn_hear_note"/>
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/SeeRhythm"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="10dip"
                android:drawableBottom="@drawable/see_rhythm"
                android:text="@string/btn_see_rhythm"/>
            <Button
                android:id="@+id/HearRhythm"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="10dip"
                android:drawableBottom="@drawable/hear_rhythm"
                android:text="@string/btn_hear_rhythm"/>
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        />
</LinearLayout>
