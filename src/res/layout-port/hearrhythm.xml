<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:layout_gravity="center"
        android:padding="5dip"
        android:background="@drawable/border"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:text="@string/rhythm_desc"/>
    <Button
        android:id="@+id/HearMissStopStop"
        android:text="Mississippi Stop Stop"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:soundEffectsEnabled="false"/>
    <Button
        android:id="@+id/HearMissAlligator"
        android:text="Mississippi Alligator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:soundEffectsEnabled="false"/>
    <Button
        android:id="@+id/HearDownPony"
        android:text="Down Pony Up Pony"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:soundEffectsEnabled="false"/>
    <Button
        android:id="@+id/HearIceCream"
        android:text="Ice Cream Sh Cone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:soundEffectsEnabled="false"/>
</merge>
